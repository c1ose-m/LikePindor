<Application
    x:Class="LikePindor.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LikePindor"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary
                    Source="Style/Label.xaml"/>
                <ResourceDictionary
                    Source="Style/Rectangle.xaml"/>
                <ResourceDictionary
                    Source="Style/Button.xaml"/>
                <ResourceDictionary
                    Source="Style/TextBox.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
